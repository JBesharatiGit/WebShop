@model EditRoleViewModel
@{ 
    ViewBag.Title = "Edit Role";
}
<h1> Edit Role  </h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col m-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <label asp-for="Id" disabled class="form-control"></label>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn  btn-primary">Uppdate</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>