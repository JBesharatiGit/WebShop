@model WebShopIdentity.Models.Stores.StoreRow

@{
    ViewData["Title"] = "AddStoreRow";
}

<h4>AddS to Receipt</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStoreRow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label  asp-for="StoreId" class="control-label text-hide"></label>*@
                <input type="hidden" readonly asp-for="StoreId" class="form-control text-hide" value="@ViewBag.StoreId" />
            </div>
            @*<div class="form-group">
            <label asp-for="ProductId" class="control-label"></label>
            <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
        </div>*@
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(@ViewBag.Products,"ProductID","Name"))">
                    <option value="">Please Select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Debit" class="control-label"></label>
                <input asp-for="Debit" class="form-control" />
                <span asp-validation-for="Debit" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label type="hidden" asp-for="Credit" class="control-label"></label>*@
                <input type="hidden" readonly asp-for="Credit" class="form-control"  value="0"/>
                <span asp-validation-for="Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a type="submit" class="btn btn-primary" asp-action="GetAllStores" asp-controller="Store">Cancel</a>
            </div>
        </form>
    </div>
</div>



