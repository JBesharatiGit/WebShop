@model WebShopIdentity.Models.OrderRow

@{
    ViewData["Title"] = "EditOrderRow";
    var OId = ViewBag.Order.OrderId;
}

<h1>EditOrderRow</h1>

<h4>OrderRow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderRow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <input readonly asp-for="OrderId" class="form-control text-hide" value="@ViewBag.Order.OrderId" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Products,"ProductID","Name",Model.ProductId))">
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input  asp-for="Price" class="form-control" readonly />
                @*<select class="form-control" id="ProductId" name="ProductId" asp-for="Price" 
                        asp-items="@(new SelectList(string.Empty,"ProductId","Price"))">
                </select>*@
                @*<script src ="/lib//jquery//dist//jquery.js"></script>*@
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
    <a asp-action="GetAllOrderRows" asp-route-id="@OId">Back to List</a>
</div>

