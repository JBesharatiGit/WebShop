@model WebShopIdentity.Models.Order

@{
    ViewData["Title"] = "AddOrder";
}
<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
@*<h1>AddOrder</h1>

<h4>Order</h4>
<hr />*@

<div class="row justify-content-center">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h4>AddOrder</h4>
            </div>
            <form asp-action="AddOrder">
                <div class="card-body">
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OrderDate" class="control-label"></label>
                        <input asp-for="OrderDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApplicationUserId" class="control-label"></label>
                        <select asp-for="ApplicationUserId"
                                class="form-control"
                                asp-items="@(new SelectList(@ViewBag.User,"Id","FirstName"))">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="GetAllOrders" class="btn btn-primary">Cancel</a>
                        </div>
                        @*<a asp-action="GetAllOrders" asp-controller="Orders">Back to List</a>*@
                    </div>

                </div>
            </form>
        </div>

    </div>

</div>

