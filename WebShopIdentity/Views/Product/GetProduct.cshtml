    ViewBag.Title = "Product Details";
    
    }

    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <div class="row justify-content-evenly ">
        <div class="col-sm-4">
            <div class="container-sm">
                <div class="card">
