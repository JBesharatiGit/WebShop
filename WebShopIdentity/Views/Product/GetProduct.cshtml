                    </div>
                    <div class="card-footer text-center">
                        @*<a type="submit" class="btn btn-primary" asp-action="GetProduct" asp-controller="Product" asp-route-id="">Choose</a>*@
                        <a type="submit" class="btn btn-primary" asp-action="AddToSessionVar" asp-controller="product" asp-route-id="@Model.product.ProductID">Add to cart</a>
                        @*<a type="submit" class="btn btn-primary" asp-action="Gap" asp-controller="Product">Back</a>*@
                    </div>
                </div>
            </div>
        </div>

        

        <div class="col-sm-6">
