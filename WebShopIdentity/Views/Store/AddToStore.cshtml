@model WebShopIdentity.Models.Stores.Store

@{
    ViewData["Title"] = "AddToStore";
}


<div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h4>Add To Store</h4>
                </div>
                <form asp-action="AddToStore">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ReceipDate" class="control-label"></label>
                            <input asp-for="ReceipDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                            <span asp-validation-for="ReceipDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DocumentTypeId" class="control-label"></label>
                            <select asp-for="DocumentTypeId" class="form-control"
                                    asp-items="@(new SelectList(@ViewBag.DocType,"Id","DocumentName"))"></select>
                            <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a type="submit" class="btn btn-primary" asp-action="Gap" asp-controller="Product">Back</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>



